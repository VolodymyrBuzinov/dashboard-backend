              "user": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Users Email"
                  },
                  "name": {
                    "type": "string",
                    "example": "Vasya",
                    "description": "Users Name"
                  }
                }
              }
            }
          }
        }
      },
      "createTaskRequest": {
        "type": "object",
        "required": ["category", "difficulty", "title", "time"],
        "properties": {
          "category": {
            "type": "string",
            "example": "STUFF",
            "description": "Task category",
            "enum": [
              "STUFF",
              "FAMILY",
              "HEALTH",
              "LEARNING",
              "LEISURE",
              "WORK"
            ]
          },
          "difficulty": {
            "type": "string",
            "example": "Easy",
            "description": "Difficulty of task",
            "enum": ["Hard", "Easy", "Normal"]
          },
          "title": {
            "type": "string",
            "example": "Do something",
            "description": "Body task"
          },
          "time": {
            "type": "string",
            "example": "06.14.2021 20:30",
            "description": "Time of end task"
          },
          "challenge": {
            "type": "boolean",
            "example": false,
            "description": "Is challenge? Default: false"
          },
          "done": {
            "type": "boolean",
            "example": false,
            "description": "Is done? Default: false"
          }
