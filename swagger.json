        "responses": {
          "201": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#components/schemas/registrationResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request.Validation Error",
            "content": {}
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "summary": "Login Method",
